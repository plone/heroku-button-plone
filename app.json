{
  "name": "Plone on Heroku",
  "description": "A simple Plone site hosted on Heroku. Login with admin:admin.",
  "repository": "https://github.com/plone/heroku-button-plone",
  "logo": "http://www.coactivate.org/projects/plone-marketing/plone-logo-guidelines/plone-vertical-logo.png",
  "keywords": ["plone", "python", "cms"],
  "website": "http://plone.org",
  "env": {
    "BUILDPACK_URL": "https://github.com/plone/heroku-buildpack-plone"
    "BUILDOUT_CONFIG": "heroku.cfg"
    "BUILDOUT_VERBOSITY": "-v"
    "BOOTSTRAP_PY_URL": "http://downloads.buildout.org/1/bootstap.py"
    "SITE_PASSWORD": "admin"
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "pgbackups:auto-month",
    "mailgun"
  ]
}
